<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.input.KeyCodeCombination?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.canvas.Canvas?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TableColumn?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<AnchorPane fx:id="anchorPane" xmlns:fx="http://javafx.com/fxml" fx:controller="com.cgvsu.GuiController">
    <TableView fx:id="table" onMouseClicked="#initialize" layoutX="12.0" layoutY="62.0" prefHeight="324.0" prefWidth="150.0">
        <columns>
            <TableColumn text="Model" fx:id="model" />
        </columns>
    </TableView>

    <TableView fx:id="cameras" onMouseClicked="#initialize" layoutX="12.0" layoutY="395.0" prefHeight="324.0" prefWidth="150.0">
        <columns>
            <TableColumn text="Cameras" fx:id="cameraName" />
        </columns>
    </TableView>
    <Button fx:id="delete" mnemonicParsing="false" text="Delete model" onAction="#setDeleteModel" layoutX="170.0" layoutY="100.0" prefHeight="50.0" prefWidth="150.0"/>
        <CheckBox fx:id="drawMesh" onAction="#drawMesh" text="Сетка" layoutX="250" layoutY="150" prefHeight="50" prefWidth="150"/>
        <CheckBox fx:id="fillPolygons" onAction="#fillPolygons" text="Заполнение цветом" layoutX="250" layoutY="170" prefHeight="50" prefWidth="150"/>
        <CheckBox fx:id="texturePolygons" onAction="#texturePolygons" text="Наложение текстуры" layoutX="250" layoutY="190" prefHeight="50" prefWidth="150"/>
    <MenuBar>
        <Menu mnemonicParsing="false" text="File">
            <MenuItem mnemonicParsing="false" onAction="#onOpenModelMenuItemClick" text="Load Model">
            <accelerator>
                <KeyCodeCombination alt="UP" control="DOWN" meta="UP" shift="UP" shortcut="UP" code="F"/>
            </accelerator>
            </MenuItem>

            <MenuItem mnemonicParsing="false" onAction="#onSaveModelMenuItemClick" text="Save Model">
                <accelerator>
                    <KeyCodeCombination alt="UP" control="DOWN" meta="UP" shift="UP" shortcut="UP" code="V"/>
                </accelerator>
            </MenuItem>

            <MenuItem mnemonicParsing="false" onAction="#onSaveAsModelMenuItemClick" text="Save Model as">
                <accelerator>
                    <KeyCodeCombination alt="UP" control="DOWN" meta="UP" shift="UP" shortcut="UP" code="C"/>
                </accelerator>
            </MenuItem>

        </Menu>
        <Menu mnemonicParsing="false" text="Camera Options">
            <MenuItem mnemonicParsing="false" onAction="#handleCameraForward" text="Forward">
                <accelerator>
                    <KeyCodeCombination alt="UP" control="UP" meta="UP" shift="UP" shortcut="UP" code="UP"/>
                </accelerator>
            </MenuItem>
            <MenuItem mnemonicParsing="false" onAction="#handleCameraBackward" text="Backward">
                <accelerator>
                    <KeyCodeCombination alt="UP" control="UP" meta="UP" shift="UP" shortcut="UP" code="DOWN"/>
                </accelerator>
            </MenuItem>
            <MenuItem mnemonicParsing="false" onAction="#handleCameraLeft" text="Left">
                <accelerator>
                    <KeyCodeCombination alt="UP" control="UP" meta="UP" shift="UP" shortcut="UP" code="LEFT"/>
                </accelerator>
            </MenuItem>
            <MenuItem mnemonicParsing="false" onAction="#handleCameraRight" text="Right">
                <accelerator>
                    <KeyCodeCombination alt="UP" control="UP" meta="UP" shift="UP" shortcut="UP" code="RIGHT"/>
                </accelerator>
            </MenuItem>
            <MenuItem mnemonicParsing="false" onAction="#handleCameraUp" text="Up">
                <accelerator>
                    <KeyCodeCombination alt="UP" control="UP" meta="UP" shift="UP" shortcut="UP" code="W"/>
                </accelerator>
            </MenuItem>
            <MenuItem mnemonicParsing="false" onAction="#handleCameraDown" text="Down">
                <accelerator>
                    <KeyCodeCombination alt="UP" control="UP" meta="UP" shift="UP" shortcut="UP" code="S"/>
                </accelerator>
            </MenuItem>
        </Menu>

        <Menu mnemonicParsing="false" text="Window Theme">
            <MenuItem mnemonicParsing="false" onAction="#whiteTheme" text="White theme">
                <accelerator>
                    <KeyCodeCombination alt="UP" control="DOWN" meta="UP" shift="UP" shortcut="UP" code="W"/>
                </accelerator>
            </MenuItem>

            <MenuItem mnemonicParsing="false" onAction="#blackTheme" text="Black theme">
                <accelerator>
                    <KeyCodeCombination alt="UP" control="DOWN" meta="UP" shift="UP" shortcut="UP" code="B"/>
                </accelerator>
            </MenuItem>
        </Menu>
    </MenuBar>

    <Canvas fx:id="canvas" width="1600" height="870" AnchorPane.topAnchor="30.0"/>
</AnchorPane>